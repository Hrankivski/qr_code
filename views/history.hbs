<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Scan History</title>
</head>
<body>
  <div id="topBar">
      <div id="historyToggle">
          <a href="/">Main page</a>
      </div>
      <div id="accountInfo">
          <a href="/login">Log In</a>
          <a href="/signup">Sign Up</a>
          <form action="/logout" method="POST">
              <button type="submit">Logout</button>
          </form>
      </div>
  </div>

  <div id="mainContent">
      <h1>Scan History</h1>
      <table class="history-table">
          <thead>
              <tr>
                  <th>Username</th>
                  <th>Result</th>
                  <th>Date</th>
              </tr>
          </thead>
          <tbody>
              {{#each history}}
              <tr>
                  <td>{{this.username}}</td>
                  <td>{{this.result}}</td>
                  <td>{{this.date}}</td>
              </tr>
              {{/each}}
          </tbody>
      </table>
  </div>
</body>
</html>
